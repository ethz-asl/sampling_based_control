<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <arg name="description_file" default="$(find mppi_omav_raisim)/data/omav.urdf"/>
    <param name="robot_description" command="$(find xacro)/xacro $(arg description_file)"/>
    <arg name="plot_cost" default="true"/>
    <arg name="plot_input" default="true"/>

    <arg name="experiment" default="false"/>
    <arg name="experiment_id" default="omav_raisim"/>

    <arg name="goal_position_x" default="5.0" />
    <arg name="goal_position_y" default="5.0" />
    <arg name="goal_position_z" default="5.0" />

    <node name="omav_control" type="omav_control" pkg="mppi_omav_raisim" output="screen">
        <param name="goal_position_x" value="$(arg goal_position_x)"/>
        <param name="goal_position_y" value="$(arg goal_position_y)"/>
        <param name="goal_position_z" value="$(arg goal_position_z)"/>
        <param name="activation_file" value="/home/studigem/.raisim/activation.raisim"/>
        <rosparam command="load" file="$(find mppi_omav_raisim)/params/omav_cost.yaml"/>
    </node>


    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen">
        <param name="publish_frequency" value="100"/>
        <param name="use_tf_static" value="true"/>
        <param name="tf_prefix" value=""/>
        <remap from="robot_description" to="robot_description"/>
        <remap from="joint_states" to="/joint_states"/>
    </node>
    <param name="robot_description_raisim" value=""/>

    <!-- Open Rviz -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find mppi_omav_raisim)/config/config.rviz" output="screen"/>
    <group>
        <param name="/config_file" value="$(find mppi_omav_raisim)/params/params.yaml"/>
        <rosparam command="load" file="$(find mppi_omav_raisim)/params/params.yaml" ns="omav_control"/>
    </group>
    <group if="$(arg plot_cost)">
        <arg name="mp_config" default="$(find mppi_omav_raisim)/resources/rqt_multiplot.xml"/>
        <node name="rqt_multiplot" pkg="rqt_multiplot" type="rqt_multiplot" args="--multiplot-config $(arg mp_config)"
              output="screen"/>
    </group>



</launch>