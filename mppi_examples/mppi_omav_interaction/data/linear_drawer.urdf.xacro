<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="cube">

    <xacro:property name="mass_cube" value="0.5"/>
    <xacro:property name="dimension_cube" value="0.3"/>

    <link name="world"/>

    <joint name="world_wall" type="fixed">
        <parent link="world"/>
        <child link="wall"/>
        <origin rpy="0 0 0" xyz="1.0 0.0 0.9"/>
    </joint>

    <link name="wall">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.02 0.5 1.8"/>
            </geometry>
            <material name="">
                <color rgba="1 1 1 0.0"/>
            </material>
        </visual>
    </link>

    <joint name="wall_wall_down" type="fixed">
        <parent link="wall"/>
        <child link="wall_down"/>
        <origin rpy="0 0 0" xyz="0.0 0.0 -0.525"/>
    </joint>

    <link name="wall_down">
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.0"/>
            <geometry>
                <box size="0.02 0.5 0.75"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.02 0.5 0.75"/>
            </geometry>
            <material name="">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>
    </link>

    <joint name="wall_wall_top" type="fixed">
        <parent link="wall"/>
        <child link="wall_top"/>
        <origin rpy="0 0 0" xyz="0.0 0.0 0.525"/>
    </joint>

    <link name="wall_top">
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.0"/>
            <geometry>
                <box size="0.02 0.5 0.75"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.02 0.5 0.75"/>
            </geometry>
            <material name="">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>
    </link>

    <joint name="wall_wall_left" type="fixed">
        <parent link="wall"/>
        <child link="wall_left"/>
        <origin rpy="0 0 0" xyz="0.0 -0.225 0.0"/>
    </joint>

    <link name="wall_left">
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.0"/>
            <geometry>
                <box size="0.02 0.05 0.3"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.02 0.05 0.3"/>
            </geometry>
            <material name="">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>
    </link>

    <joint name="wall_wall_right" type="fixed">
        <parent link="wall"/>
        <child link="wall_right"/>
        <origin rpy="0 0 0" xyz="0.0 0.225 0.0"/>
    </joint>

    <link name="wall_right">
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.0"/>
            <geometry>
                <box size="0.02 0.05 0.3"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.02 0.05 0.3"/>
            </geometry>
            <material name="">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>
    </link>

    <joint name="articulation_joint" type="prismatic">
        <parent link="wall"/>
        <child link="drawer"/>
        <origin rpy="0 0 0" xyz="0.24 0.0 0.0"/>
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" velocity="5.0" lower="-0.5" upper="0.0"/>
        <dynamics spring_mount="0 0 0" stiffness="0.0" damping="0.5"/>
    </joint>

    <link name="drawer">
        <inertial>
            <mass value="2.0"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.12" ixy="0" ixz="0" iyy="0.14" iyz="0" izz="0.18"/>
        </inertial>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.0"/>
            <geometry>
                <box size="0.5 0.4 0.3"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.5 0.4 0.3"/>
            </geometry>
            <material name="">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
    </link>

    <joint name="drawer_handle" type="fixed">
        <parent link="drawer"/>
        <child link="handle"/>
        <origin rpy="1.5708 0 0" xyz="-0.3 0.0 0.0"/>
    </joint>

    <link name="handle">
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.0"/>
            <geometry>
                <box size="0.01 0.1 0.01"/>
            </geometry>
            <material name="">
                <contact name="rubber"/>
            </material>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.01 0.1 0.01"/>
            </geometry>
            <material name="">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
    </link>

    <joint name="handle_left" type="fixed">
        <parent link="handle"/>
        <child link="left"/>
        <origin rpy="0 0 0" xyz="0.05 0.05 0.0"/>
    </joint>

    <link name="left">
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.0"/>
            <geometry>
                <box size="0.1 0.01 0.01"/>
            </geometry>
            <material name="">
                <contact name="rubber"/>
            </material>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.1 0.01 0.01"/>
            </geometry>
            <material name="">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
    </link>

    <joint name="handle_right" type="fixed">
        <parent link="handle"/>
        <child link="right"/>
        <origin rpy="0 0 0" xyz="0.05 -0.05 0.0"/>
    </joint>

    <link name="right">
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.0"/>
            <geometry>
                <box size="0.1 0.01 0.01"/>
            </geometry>
            <material name="">
                <contact name="rubber"/>
            </material>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.1 0.01 0.01"/>
            </geometry>
            <material name="">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
    </link>


</robot>

