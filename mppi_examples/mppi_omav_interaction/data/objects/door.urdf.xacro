<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="cube">

    <xacro:property name="mass_cube" value="0.5"/>
    <xacro:property name="dimension_cube" value="0.3"/>

    <link name="world"/>

    <joint name="world_wall" type="fixed">
        <parent link="world"/>
        <child link="wall"/>
        <origin rpy="0 0 0" xyz="1.0 0.0 0.9"/>
    </joint>

    <link name="wall">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.02 0.5 1.8"/>
            </geometry>
            <material name="">
                <color rgba="1 1 1 0.2"/>
            </material>
        </visual>
    </link>

    <joint name="articulation_joint" type="revolute">
        <parent link="wall"/>
        <child link="hinge"/>
        <origin rpy="0 0 0" xyz="0 0.25 0.0"/>
        <axis xyz="0 0 1"/>
        <limit effort="100.0" velocity="1.5" lower="-1.57" upper="0.1"/>
        <dynamics damping="1.0" friction="4.0"/>
    </joint>

    <link name="hinge"/>

    <joint name="hinge_door" type="fixed">
        <parent link="hinge"/>
        <child link="door"/>
        <origin rpy="0 0 0" xyz="0 -0.25 0.0"/>
    </joint>

    <link name="door">
        <inertial>
            <mass value="2.0"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.12" ixy="0" ixz="0" iyy="0.14" iyz="0" izz="0.18"/>
        </inertial>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.0"/>
            <geometry>
                <box size="0.02 0.5 1.7"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.02 0.5 1.7"/>
            </geometry>
            <material name="">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
    </link>

    <joint name="drawer_handle" type="fixed">
        <parent link="door"/>
        <child link="handle"/>
        <origin rpy="0 0 0" xyz="-0.1 0.0 0.0"/>
    </joint>

    <link name="handle">
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.0"/>
            <geometry>
                <box size="0.01 0.1 0.01"/>
            </geometry>
            <material name="">
                <contact name="rubber"/>
            </material>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.01 0.1 0.01"/>
            </geometry>
            <material name="">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
    </link>

    <joint name="handle_left" type="fixed">
        <parent link="handle"/>
        <child link="left"/>
        <origin rpy="0 0 0" xyz="0.05 0.05 0.0"/>
    </joint>

    <link name="left">
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.0"/>
            <geometry>
                <box size="0.1 0.01 0.01"/>
            </geometry>
            <material name="">
                <contact name="rubber"/>
            </material>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.1 0.01 0.01"/>
            </geometry>
            <material name="">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
    </link>

    <joint name="handle_right" type="fixed">
        <parent link="handle"/>
        <child link="right"/>
        <origin rpy="0 0 0" xyz="0.05 -0.05 0.0"/>
    </joint>

    <link name="right">
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.0"/>
            <geometry>
                <box size="0.1 0.01 0.01"/>
            </geometry>
            <material name="">
                <contact name="rubber"/>
            </material>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.1 0.01 0.01"/>
            </geometry>
            <material name="">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
    </link>

</robot>

