    <link name="hook">
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="${tool_radius}" length="${tool_length}"/>
                <!-- <box size="${tool_radius*2} ${tool_radius*2} ${tool_length}"/> -->
            </geometry>
            <material name="">
                <contact name="steel"/>
            </material>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="${tool_radius}" length="${tool_length}"/>
                <!-- <box size="${tool_radius*2} ${tool_radius*2} ${tool_length}"/> -->
            </geometry>
            <material name="">
                <color rgba="1 1 1 1"/>
