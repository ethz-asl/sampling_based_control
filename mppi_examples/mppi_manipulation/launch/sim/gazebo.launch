<?xml version="1.0"?>
<launch>
    <arg name="config" default="base" />
    <arg name="x" default="0" />
    <arg name="y" default="0" />
    <arg name="z" default="1" />
    <arg name="yaw" default="0" />
    <arg name="joystick" default="true" />

    <!-- Load Ridgeback's description, controllers, and teleop nodes. -->
    <param name="robot_description"
           command="$(find xacro)/xacro $(find mppi_manipulation)/data/panda_mobile_gazebo.urdf.xacro
                   resources_directory:='package://mppi_panda' collision_links:=true collision_hand:=true add_finger:=true" />

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

    <include file="$(find mppi_manipulation)/launch/sim/control_sim.launch" />

    <rosparam param="/gazebo_ros_control/pid_gains">
        front_left_wheel:
          p: 1
          i: 0.1
          d: 0
        front_right_wheel:
          p: 1
          i: 0.1
          d: 0
        rear_left_wheel:
          p: 1
          i: 0.1
          d: 0
        rear_right_wheel:
          p: 1
          i: 0.1
          d: 0
    </rosparam>


    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="debug" value="0" />
        <arg name="gui" value="false" />
        <arg name="use_sim_time" value="true" />
        <arg name="headless" value="false" />
        <arg name="paused" value="true"/>
    </include>

    <!-- Spawn Ridgeback -->
    <arg name="inital_config"
         default="-J panda_joint1 0.0
                  -J panda_joint2 -0.473
                  -J panda_joint3 0.10720
                  -J panda_joint4 -1.937
                  -J panda_joint5 -0.1610
                  -J panda_joint6 1.48333
                  -J panda_joint7 0.75098"/>
    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
          args="-urdf -model ridgeback -param robot_description -urdf $(arg inital_config) -x $(arg x) -y $(arg y) -z $(arg z) -Y $(arg yaw)"
          output="screen"/>

    <!-- Open Rviz -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find mppi_manipulation)/config/rviz/simulation.rviz" output="screen"/>

    <node name="unpause_physics" type="unpause_physics.py" pkg="mppi_manipulation" output="screen">
      <param name="delay_sec" value="5.0"/>
    </node>
</launch>