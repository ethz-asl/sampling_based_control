<?xml version='1.0' encoding='ASCII'?>
<!-- NOTE: this should be identical to the object model of the affordance node -->
<robot name="zanussi_oven" xmlns:xacro="http://www.ros.org/wiki/xacro" >
  <xacro:arg name="prefix" default=""/>
  <xacro:arg name="resources_directory" default=""/>
  <xacro:arg name="resources_prefix" default=""/>
  <xacro:property name="prefix" default="$(arg prefix)"/>
  <xacro:property name="resources_directory" default="$(arg resources_directory)"/>
  <xacro:property name="resources_prefix" default="$(arg resources_prefix)"/>
  <link name="world"/>
  <link name="base"/>
  <link name="${prefix}handle_link_2"/>
  <link name="${prefix}handle_link">
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 -0.0 0.0"/>
      <mass value="3.0"/>
      <inertia ixx="0.4333886585" ixy="0.0" ixz="0.0" iyy="0.39146708384" iyz="0.0" izz="0.042168942339999994"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="${resources_directory}${resources_prefix}consolidated_collision_meshes/door_mesh_2.obj" scale="1 1 1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
    </visual>
    <visual>
      <geometry>
        <box size="0.40 0.02 0.02"/>
      </geometry>
      <origin xyz="0.297 0.428 0.051" rpy="0.0 0.0 0.0"/>
    </visual>
    <visual>
      <geometry>
        <box size="0.05 0.02 0.045"/>
      </geometry>
      <origin xyz="0.072 0.428 0.040" rpy="0.0 0.0 0.0"/>
    </visual>
    <visual>
      <geometry>
        <box size="0.05 0.02 0.045"/>
      </geometry>
      <origin xyz="0.52 0.428 0.040" rpy="0.0 0.0 0.0"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="${resources_directory}${resources_prefix}consolidated_collision_meshes/door_mesh_2.obj" scale="1 1 1"/>
      </geometry>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </collision>
    <collision>
      <geometry>
        <box size="0.40 0.02 0.02"/>
      </geometry>
      <origin xyz="0.297 0.428 0.051" rpy="0.0 0.0 0.0"/>
    </collision>
    <collision>
      <geometry>
        <box size="0.05 0.02 0.045"/>
      </geometry>
      <origin xyz="0.072 0.428 0.040" rpy="0.0 0.0 0.0"/>
    </collision>
    <collision>
      <geometry>
        <box size="0.05 0.02 0.045"/>
      </geometry>
      <origin xyz="0.52 0.428 0.040" rpy="0.0 0.0 0.0"/>
    </collision>
  </link>
  <link name="${prefix}link_3">
    <visual>
      <geometry>
        <mesh filename="package://mppi_manipulation/data/objects/zanussi/consolidated_collision_meshes/base_mesh_v.obj" scale="1 1 1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="${resources_directory}${resources_prefix}consolidated_collision_meshes/base_mesh.obj" scale="1 1 1"/>
      </geometry>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </collision>
  </link>
  <joint name="fixed" type="fixed">
    <parent link="world"/>
    <child link="base"/>
    <!--<origin xyz="-1.156 1.46 1.01" rpy="0.0 0.0 1.57"/>-->
    <origin xyz="-0.015 -0.97 1.21" rpy="0.0 0.0 3.8"/>
    <axis xyz="1.0 0.0 0.0"/>
  </joint>
  <joint name="articulation_joint" type="revolute">
    <parent link="${prefix}link_3"/>
    <child link="${prefix}handle_link"/>
    <!--open tasks-->
    <origin xyz="-0.594 -0.589 -0.015" rpy="0.0 0.0 0.0"/>
    <!--close tasks-->
    <!--<origin xyz="-0.594 -0.569 -0.035" rpy="0.0 0.0 0.0"/>-->
    <axis xyz="1.0 0.0 0.0"/>
    <limit effort="1000.0" velocity="1.0" lower="0.0" upper="1.5707963267948966"/>
    <dynamics damping="20.0" friction="40.0"/>
  </joint>
  <joint name="${prefix}handle_joint" type="fixed">
    <parent link="${prefix}handle_link"/>
    <child link="${prefix}handle_link_2"/>
    <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
  </joint>
  <joint name="${prefix}joint_3" type="fixed">
    <parent link="base"/>
    <child link="${prefix}link_3"/>
    <origin xyz="0.0 0.0 0.0" rpy="1.570796326794897 -0.0 -1.570796326794897"/>
    <axis xyz="1.0 0.0 0.0"/>
  </joint>
</robot>
